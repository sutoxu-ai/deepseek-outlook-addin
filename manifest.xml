<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:ov="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <!-- 唯一标识（已替换为新 GUID） -->
  <Id>3f8b4e3b-1c1a-4e2f-96ae-2a01b8f6b8f9</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>DeepSeek Addin</ProviderName>
  <DefaultLocale>zh-CN</DefaultLocale>
  <DisplayName DefaultValue="DeepSeek 智能回复助手"/>
  <Description DefaultValue="在 Outlook 中调用 DeepSeek 生成邮件回复"/>

  <!-- 兼容旧式入口的图标（命令清单会通过资源 resid 引用） -->
  <IconUrl DefaultValue="https://sutoxu-ai.github.io/deepseek-outlook-addin/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://sutoxu-ai.github.io/deepseek-outlook-addin/icon-128.png"/>
  <SupportUrl DefaultValue="https://sutoxu-ai.github.io/deepseek-outlook-addin/"/>

  <!-- 适用宿主 -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <!-- API 要求（若旧版 Outlook 报版本不兼容，可临时改为 1.3 测试） -->
  <Requirements>
    <Sets DefaultMinVersion="1.5">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <!-- 权限（企业租户可能需要管理员批准） -->
  <Permissions>ReadWriteMailbox</Permissions>

  <!-- 旧式 Taskpane 入口（保留以兼容） -->
  <FormSettings>
    <Form xsi:type="ItemCompose">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://sutoxu-ai.github.io/deepseek-outlook-addin/index.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- 统一资源：图标、URL、文案（命令清单通过 resid 引用） -->
  <Resources>
    <bt:Images>
      <bt:Image id="Icon64" DefaultValue="https://sutoxu-ai.github.io/deepseek-outlook-addin/icon-64.png"/>
      <bt:Image id="Icon128" DefaultValue="https://sutoxu-ai.github.io/deepseek-outlook-addin/icon-128.png"/>
    </bt:Images>
    <bt:Urls>
      <bt:Url id="TaskpaneUrl" DefaultValue="https://sutoxu-ai.github.io/deepseek-outlook-addin/index.html"/>
      <bt:Url id="SupportUrl" DefaultValue="https://sutoxu-ai.github.io/deepseek-outlook-addin/"/>
    </bt:Urls>
    <bt:ShortStrings>
      <bt:String id="GroupLabel" DefaultValue="DeepSeek"/>
      <bt:String id="ButtonLabel" DefaultValue="DeepSeek 回复"/>
      <bt:String id="ButtonTooltip" DefaultValue="打开 DeepSeek 智能回复侧栏"/>
    </bt:ShortStrings>
    <bt:LongStrings>
      <bt:String id="AppDescription" DefaultValue="在 Outlook 中调用 DeepSeek 生成邮件回复"/>
    </bt:LongStrings>
  </Resources>

  <!-- 命令清单：在撰写场景显示按钮，点击打开 Taskpane -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" Version="1.0">
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="DeepSeekGroup" label="GroupLabel">
                <Control xsi:type="Button" id="DeepSeekComposeButton">
                  <Label resid="ButtonLabel"/>
                  <Tooltip resid="ButtonTooltip"/>
                  <Icon>
                    <bt:Image id="Icon64"/>
                    <bt:Image id="Icon128"/>
                  </Icon>
                  <Supertip>
                    <Title resid="ButtonLabel"/>
                    <Description resid="AppDescription"/>
                  </Supertip>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>DeepSeekTaskpane</TaskpaneId>
                    <SourceLocation resid="TaskpaneUrl"/>
                    <SupportsPinning>true</SupportsPinning>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>

        <!-- 若需要在“阅读邮件”界面也显示按钮，可在此处另加 MessageReadCommandSurface 扩展点 -->
      </Host>
    </Hosts>

    <!-- 与上保持一致的 API 要求 -->
    <Requirements>
      <Sets DefaultMinVersion="1.5">
        <Set Name="Mailbox"/>
      </Sets>
    </Requirements>
  </VersionOverrides>
</OfficeApp>
